<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ListViewItem"
        android:gravity="center"
        android:background="?attr/item_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="?attr/font_medium"
            android:textColor="?attr/text_primary_color"
            tools:text="@string/saved_search_name_sample"/>

        <TextView
            android:id="@+id/query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/text_secondary_color"
            tools:text="@string/saved_search_query_sample_long"/>

    </LinearLayout>

</layout>